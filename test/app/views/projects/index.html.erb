<div class="page-header">
  <h1>All of the Projects</h1>
</div>

<%= link_to "Create a new project", new_project_path, class: "btn btn-success" %>

<% @projects.each do |project| %>
  <div class="project">

   <strong><%= project.component %></strong>
   <p>Language:       <%= project.language %><br>
   New/Changed Words: <%= project.new_changed_word %><br>
   Total Words:       <%= project.total_word %><br>
   Due Date:          <%= project.due_date %><br>
   Project Manager:   <%= project.project_manager %><br>
   Status:            <%= project.status %><br>
   </p>
   <div class="meta">
        <%= link_to time_ago_in_words(project.created_at) + " ago", project %> 
        <span class="admin">
          | <%= link_to "Edit", edit_project_path(project) %> | 
          <%= link_to "Cancel", project, method: :delete, data: { confirm: "Are you sure your want to cancle this project?"} %>
        </span>
    </div>
  </div>

<% end %>

